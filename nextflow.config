profiles {

    travis {
        docker {
            enabled = true
            temp = 'auto'
            runOptions = '-u `id -u $USER`'
        }
        cores = 2
        echo = true
    }

    local {
        params {
            debug = true
            reference = "WS245/WS245.fa.gz"
        }

        docker {
            enabled = true
        }

        process {
            container = "andersenlab/nil-ril-nf"
        }
    }

    quest_debug {

        params {
            genome = "WS245"
            debug = true
            tmpdir = "/projects/b1042/AndersenLab/tmp"
            reference = "/projects/b1059/data/genomes/c_elegans/${genome}/${genome}.fa.gz"
        }

        process {
            container = 'docker://andersenlab/nil-ril-nf'
        }

        singularity {

            enabled = true
            autoMounts = true

            cacheDir = "/projects/b1059/workflows/nil-ril-nf/singularity_cache"
            pullTimeout = '20 min'
        }

    }

    quest {

        params {
            genome = "WS245"
            tmpdir = "/projects/b1042/AndersenLab/tmp"
            reference = "/projects/b1059/data/genomes/c_elegans/${genome}/${genome}.fa.gz"
        }

        process {
            container = 'docker://andersenlab/nil-ril-nf'
        }

        singularity {

            enabled = true
            autoMounts = true

            cacheDir = "/projects/b1059/workflows/nil-ril-nf/singularity_cache"
            pullTimeout = '20 min'
        }
    }

}

report {
    enabled = true
}
