profiles {

    travis {
        docker {
            enabled = true
            temp = 'auto'
            runOptions = '-u `id -u $USER`'
        }
        cores = 2
        echo = true
    }

    debug {

        params {
            debug = true
            reference = "reference/WS245.fa.gz"

        }

        docker {
            enabled = true
        }

        process {
            container = "andersenlab/nil-ril-nf"
        }

    }

    quest_debug {
        process {
            module="gcc/5.1.0:R/3.3.1"
        }
        params {
            genome = "WS245"
            debug = true
            tmpdir = "/projects/b1042/AndersenLab/tmp"
            email="dec@u.northwestern.edu"
            reference = "/projects/b1059/data/genomes/c_elegans/${genome}/${genome}.fa.gz"
        }
    }

    quest {
        process {
                module="gcc/5.1.0:R/3.3.1"
        }
        params {
            genome = "WS245"
            tmpdir = "/projects/b1042/AndersenLab/tmp"
            email="dec@u.northwestern.edu"
            reference = "/projects/b1059/data/genomes/c_elegans/${genome}/${genome}.fa.gz"
        }
    }

}


timeline {
    enabled = true
    file = "timeline.html"
}

trace {
    enabled = true
    file = "trace.tsv"
}